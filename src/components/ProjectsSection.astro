---
import ProjectCard from './ProjectCard.astro';
import { projects as allProjectsData } from '../data/projects.js';

const { 
  title = "مشاريع تم تسليمها", 
  projects = allProjectsData.delivered, 
  showStatus = true, 
  background = "var(--background)"
} = Astro.props;
---

<section class="projects-section" style=`background-color: ${background}`>
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{title}</h2>
      <a href="/projects" class="see-all-link">عرض الكل &rarr;</a>
    </div>
    <div class="projects-grid">
      {projects.map(project => (
        <ProjectCard project={{ ...project, status: project.status || (title.includes("تسليمها") ? 'delivered' : 'under-construction') }} showStatus={showStatus} />
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes shine {
		0% {
			background-position: -200% center;
		}
		100% {
			background-position: 200% center;
		}
	}

  .projects-section {
    padding: 4rem 0;
    text-align: right;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2.8rem;
    font-weight: 700;
    display: inline-block;
    background: linear-gradient(90deg, #B8860B, #EACD65, #B8860B);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 200% auto;
		animation: shine 5s linear infinite;
  }

  .see-all-link {
    font-size: 1.1rem;
    color: #B8860B;
    text-decoration: none;
    font-weight: 700;
    transition: color 0.3s ease;
  }

  .see-all-link:hover {
    color: #DAA520;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2.5rem;
  }

  @media (max-width: 768px) {
    .section-header {
        flex-direction: column;
        align-items: flex-end; /* Align to the right */
        gap: 0.5rem;
        margin-bottom: 2rem;
    }
    .section-title {
        font-size: 2.2rem;
    }
     .projects-grid {
        grid-template-columns: 1fr;
    }
  }
</style>