<style>
  @keyframes shine {
		0% {
			background-position: -200% center;
		}
		100% {
			background-position: 200% center;
		}
	}

  .site-footer {
    background-color: var(--background);
    padding: 5rem 0 2rem 0;
    text-align: right;
    color: var(--text-dark);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
    align-items: stretch;
  }

  .footer-card {
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    border: 1px solid #B8860B;
  }

  .footer-title {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    position: relative;
    display: inline-block;
    font-weight: 700;
    background: linear-gradient(90deg, #B8860B, #EACD65, #B8860B);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 200% auto;
	  animation: shine 5s linear infinite;
  }

  .footer-title::after {
    content: '';
    position: absolute;
    right: 0;
    bottom: -10px;
    width: 50px;
    height: 3px;
    background: linear-gradient(90deg, #B8860B, #EACD65);
  }

  .footer-card p:not(.company-name-gradient) {
    color: var(--text-dark);
    opacity: 0.8;
    line-height: 1.8;
    margin-bottom: 1rem;
    flex-grow: 1;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    columns: 2;
    gap: 10px;
    flex-grow: 1;
  }

  .footer-links li a {
    color: #B8860B; /* Gold color for links */
    text-decoration: none;
    font-size: 1rem;
    margin-bottom: 0.8rem;
    display: inline-block;
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .footer-links li a:hover {
    color: #DAA520;
    transform: translateX(-5px);
  }

  .contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-list li {
    font-size: 1rem;
  }

  .contact-list a {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: #B8860B; /* Gold color for contact links */
    text-decoration: none;
    transition: color 0.3s ease;
    font-weight: 700;
  }

  .contact-list a:hover {
    color: #DAA520;
  }

  .contact-list .icon {
    display: none; /* Hiding old icons for a cleaner look */
  }

  .newsletter-form {
    display: flex;
    margin-top: auto;
    border-radius: 50px;
    overflow: hidden;
    border: 1px solid #B8860B;
  }

  .newsletter-form input {
    flex-grow: 1;
    border: none;
    padding: 0.8rem 1.2rem;
    font-size: 1rem;
    background-color: transparent;
    color: var(--text-dark);
    font-family: 'Cairo', sans-serif;
  }

  .newsletter-form input::placeholder {
    color: var(--text-muted);
  }

  .newsletter-form input:focus {
    outline: none;
  }

  .newsletter-form button {
    border: none;
    background: linear-gradient(90deg, #B8860B, #DAA520);
    color: #fff;
    padding: 0 1.5rem;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: opacity 0.3s ease;
    font-family: 'Cairo', sans-serif;
  }

  .newsletter-form button:hover {
    opacity: 0.85;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid #e0e0e0;
  }
  
  .footer-bottom p {
    margin: 0;
    color: #B8860B;
    opacity: 1;
    font-size: 0.9rem;
    flex-grow: 1;
    text-align: center;
  }

  .company-name-gradient {
    background: linear-gradient(90deg, #B8860B, #EACD65, #B8860B);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    font-weight: bold;
    background-size: 200% auto;
	  animation: shine 5s linear infinite;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-grow: 1;
  }

  .social-links a {
    color: #B8860B; /* Gold color for social icons */
    transition: color 0.3s ease, transform 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
  }

  .social-links a:hover {
    color: #DAA520;
    transform: translateY(-2px);
  }

  .social-links .social-name {
    font-size: 0.75rem;
    color: #B8860B;
    opacity: 1;
    margin-bottom: 0.3rem;
    transition: color 0.3s ease;
  }
  
  .social-links a:hover .social-name {
      color: var(--primary);
  }

  .social-links svg {
    width: 1.2rem;
    height: 1.2rem;
    fill: currentColor;
  }

  @media (max-width: 768px) {
    .footer-bottom {
      flex-direction: column;
      justify-content: center;
    }
    .footer-bottom p {
      order: 2;
    }
    .social-links {
      order: 1;
      margin-bottom: 1rem;
    }
  }

  @media (max-width: 1200px) {
    .footer-grid {
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    }
  }

  @media (max-width: 576px) {
    .footer-links {
      columns: 1;
    }
  }
</style>