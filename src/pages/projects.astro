---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects } from '../data/projects.js';
---

<Layout title="مشاريعنا - شركة الايمان للتطوير العقاري">
  <div class="projects-page">
    <div class="page-header">
      <div class="container">
        <h1 class="page-title company-name-gradient">مشاريعنا العقارية</h1>
        <p class="page-subtitle">
          استكشف مشاريعنا المتميزة، من الوحدات التي تم تسليمها إلى المشاريع الواعدة قيد الإنشاء.
        </p>
      </div>
    </div>

    <div class="page-content">
      <!-- Delivered Projects Section -->
      <section id="delivered" class="projects-section delivered-section">
        <div class="container">
          <h2 class="section-title company-name-gradient">مشاريع تم تسليمها</h2>
          <div class="projects-grid">
            {projects.delivered.map(project => (
              <ProjectCard project={{...project, status: 'delivered'}} />
            ))}
          </div>
        </div>
      </section>

      <!-- Under Construction Projects Section -->
      <section id="under-construction" class="projects-section under-construction-section">
        <div class="container">
          <h2 class="section-title company-name-gradient">مشاريع تحت الإنشاء</h2>
          <div class="projects-grid">
            {projects.underConstruction.map(project => (
              <ProjectCard project={{...project, status: 'under-construction'}} />
            ))}
          </div>
        </div>
      </section>
    </div>
  </div>
</Layout>

<style>
   @keyframes shine {
		0% {
			background-position: -200% center;
		}
		100% {
			background-position: 200% center;
		}
	}

  .company-name-gradient {
    background: linear-gradient(90deg, #B8860B, #EACD65, #B8860B);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    font-weight: bold;
    background-size: 200% auto;
	  animation: shine 5s linear infinite;
  }

  .projects-page {
    padding-bottom: 4rem;
  }

  .page-header {
    background-color: transparent;
    text-align: right;
    padding: 160px 0 80px 0;
  }

  .page-title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    display: inline-block;
    font-weight: 700;
  }

  .page-subtitle {
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0;
    color: var(--secondary);
    opacity: 0.95;
  }

  .page-content {
    padding: 0;
  }

  .projects-section {
    padding: 4rem 0;
  }

  .delivered-section {
      background-color: var(--background);
  }
  .under-construction-section {
      background-color: #fff;
  }

  .section-title {
    text-align: center;
    font-size: 2.8rem;
    margin-bottom: 3rem;
    display: inline-block;
    font-weight: 700;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2.5rem;
  }

  /* Center the section titles */
  .projects-section .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 120px 0 60px 0;
    }
    .page-title {
      font-size: 2.8rem;
    }
    .section-title {
        font-size: 2.2rem;
    }
    .projects-grid {
        grid-template-columns: 1fr;
    }
  }
</style>