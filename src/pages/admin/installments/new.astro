---
import Layout from '../../../layouts/Layout.astro';
---

<Layout title="إضافة قسط جديد - المدير العام" showNavigation={false}>
    <main class="new-installment-main">
        <div class="form-card">
            <header class="form-header">
                <h1>إضافة قسط جديد</h1>
                <p>املأ البيانات لإنشاء سجل قسط جديد.</p>
            </header>

            <form id="new-installment-form" class="new-installment-form">
                <!-- BASIC INFO -->
                <div class="form-group">
                    <select id="type" name="type" required>
                        <option value="" disabled selected hidden></option>
                        <option value="شقة">شقة</option>
                        <option value="محل">محل</option>
                        <option value="بدروم">بدروم</option>
                        <option value="أخرى">أخرى</option>
                    </select>
                    <label for="type">النوع</label>
                </div>
                <div class="form-group">
                    <input type="text" id="location" name="location" placeholder=" " required />
                    <label for="location">الموقع</label>
                </div>
                <div class="form-group" id="other-type-wrapper">
                    <input type="text" id="otherTypeText" name="otherTypeText" placeholder=" " />
                    <label for="otherTypeText">الرجاء تحديد النوع</label>
                </div>
                <div class="form-group">
                    <input type="text" id="customerName" name="customerName" placeholder=" " required />
                    <label for="customerName">اسم العميل</label>
                </div>
                <div class="form-group">
                    <input type="tel" id="customerPhone" name="customerPhone" placeholder=" " required />
                    <label for="customerPhone">رقم هاتف العميل</label>
                </div>
                <div class="form-group">
                    <input type="number" id="totalAmount" name="totalAmount" placeholder=" " required />
                    <label for="totalAmount">اجمالي المبلغ</label>
                </div>

                <!-- SCHEDULE GENERATOR -->
                <div class="form-group">
                    <select id="installmentsCount" name="installmentsCount" required>
                        <option value="" disabled selected hidden></option>
                        {[...Array(10).keys()].map(i => <option value={i + 1}>{i + 1}</option>)}
                    </select>
                    <label for="installmentsCount">حدد عدد الأقساط</label>
                </div>

                <!-- DYNAMIC SCHEDULE CONTAINER -->
                <div id="installments-schedule-container"></div>

                <!-- NOTES -->
                <div class="form-group" style="margin-top: 2.5rem;">
                    <textarea id="notes" name="notes" rows="4" placeholder=" "></textarea>
                    <label for="notes">ملاحظات (اختياري)</label>
                </div>

                <!-- ACTIONS -->
                <div class="form-actions">
                    <button type="submit" class="submit-button">حفظ السجل</button>
                    <a href="/admin/installments" class="cancel-link">إلغاء</a>
                </div>
            </form>
        </div>
    </main>
</Layout>

<script is:inline>
    if (sessionStorage.getItem('isAdminLoggedIn') !== 'true') {
        window.location.href = '/admin';
    }

    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('new-installment-form');
        const typeSelect = document.getElementById('type');
        const otherTypeWrapper = document.getElementById('other-type-wrapper');
        const otherTextInput = document.getElementById('otherTypeText');
        const countSelect = document.getElementById('installmentsCount');
        const scheduleContainer = document.getElementById('installments-schedule-container');
        const totalAmountInput = document.getElementById('totalAmount');

        const toggleOtherField = () => {
            if (typeSelect.value === 'أخرى') {
                otherTypeWrapper.style.maxHeight = otherTypeWrapper.scrollHeight + 'px';
                otherTypeWrapper.style.opacity = '1';
                otherTypeWrapper.style.marginBottom = '1.75rem';
                otherTextInput.required = true;
            } else {
                otherTypeWrapper.style.maxHeight = '0';
                otherTypeWrapper.style.opacity = '0';
                otherTypeWrapper.style.marginBottom = '0';
                otherTextInput.required = false;
                otherTextInput.value = '';
            }
        };
        typeSelect.addEventListener('change', toggleOtherField);
        toggleOtherField();

        const generateSchedule = () => {
            const count = parseInt(countSelect.value) || 0;
            const totalAmount = parseFloat(totalAmountInput.value) || 0;
            const amountPerInstallment = count > 0 ? (totalAmount / count).toFixed(2) : 0;

            scheduleContainer.innerHTML = '';
            if (count === 0) return;

            let scheduleHTML = '';
            for (let i = 1; i <= count; i++) {
                scheduleHTML += `
                    <div class="installment-card">
                        <h3 class="installment-card-header">القسط ${i}</h3>
                        <div class="installment-card-body">
                            <div class="form-group compact">
                                <input type="number" step="0.01" id="inst-amount-${i}" name="inst-amount-${i}" placeholder=" " value="${amountPerInstallment}" required />
                                <label for="inst-amount-${i}">قيمة القسط</label>
                            </div>
                            <div class="form-group compact">
                                <input type="date" id="inst-due-date-${i}" name="inst-due-date-${i}" class="has-value-when-filled" required />
                                <label for="inst-due-date-${i}">تاريخ الاستحقاق</label>
                            </div>
                            <div class="form-group compact">
                                <select id="inst-status-${i}" name="inst-status-${i}" required>
                                    <option value="pending" selected>مستحق</option>
                                    <option value="paid">مدفوع</option>
                                </select>
                                <label for="inst-status-${i}">الحالة</label>
                            </div>
                        </div>
                    </div>
                `;
            }
            scheduleContainer.innerHTML = scheduleHTML;
        };

        countSelect.addEventListener('change', generateSchedule);
        totalAmountInput.addEventListener('input', generateSchedule);

        form.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const formData = new FormData(form);
            const count = parseInt(formData.get('installmentsCount')) || 0;
            const installments = [];

            for (let i = 1; i <= count; i++) {
                installments.push({
                    amount: formData.get(`inst-amount-${i}`),
                    dueDate: formData.get(`inst-due-date-${i}`),
                    status: formData.get(`inst-status-${i}`),
                });
            }

            const typeValue = formData.get('type');
            const finalType = typeValue === 'أخرى' ? formData.get('otherTypeText') : typeValue;

            const newRecord = {
                id: Date.now(), // Use timestamp as a number for easier sorting
                type: finalType,
                location: formData.get('location'),
                customerName: formData.get('customerName'),
                customerPhone: formData.get('customerPhone'),
                totalAmount: formData.get('totalAmount'),
                notes: formData.get('notes'),
                installmentsCount: count,
                installments: installments,
            };

            try {
                const existingData = JSON.parse(localStorage.getItem('installmentsData')) || [];
                existingData.push(newRecord);
                localStorage.setItem('installmentsData', JSON.stringify(existingData));
                window.location.href = '/admin/installments/list';
            } catch (error) {
                console.error('Could not save data to localStorage', error);
                alert('حدث خطأ أثناء حفظ البيانات. الرجاء المحاولة مرة أخرى.');
            }
        });
    });
</script>

<style>
:root {
    --page-bg: #f0f2f5;
    --card-bg: #ffffff;
    --primary-accent: #6d28d9; 
    --secondary-accent: #0891b2;
    --text-primary: #111827;
    --text-secondary: #6b7280;
    --input-bg: #f9fafb;
    --input-border: #d1d5db;
    --input-border-focus: var(--primary-accent);
}

.new-installment-main { 
    min-height: 100vh; 
    background-color: var(--page-bg);
    display: flex; 
    justify-content: center; 
    align-items: flex-start; 
    padding: 3rem 2rem; 
    font-family: 'Cairo', sans-serif; 
    direction: rtl; 
}

.form-card { 
    width: 100%; 
    max-width: 600px; 
    background: var(--card-bg); 
    border-radius: 16px; 
    padding: 2.5rem 3rem; 
    border: 1px solid #e5e7eb;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    margin-bottom: 3rem; 
}

.form-header h1 { 
    font-size: 2rem; 
    font-weight: 800; 
    color: var(--text-primary); 
    margin: 0; 
    text-align: center; 
}
.form-header p { 
    color: var(--text-secondary); 
    margin: 0.5rem 0 2.5rem; 
    text-align: center; 
}

.form-group { 
    position: relative; 
    margin-bottom: 1.75rem; 
    width: 100%; 
}
#other-type-wrapper { 
    max-height: 0; 
    opacity: 0; 
    overflow: hidden; 
    margin-bottom: 0; 
    padding: 0; 
    transition: max-height 0.5s ease-out, opacity 0.4s ease-out, margin-bottom 0.5s ease-out; 
}

.form-group input, .form-group select, .form-group textarea { 
    width: 100%; 
    padding: 1rem 0.8rem 0.8rem; 
    background-color: var(--input-bg); 
    border: 1px solid var(--input-border); 
    border-radius: 8px; 
    font-size: 1rem; 
    font-family: 'Cairo', sans-serif; 
    color: var(--text-primary); 
    transition: border-color 0.3s, box-shadow 0.3s; 
}
.form-group select { 
    padding: 0.9rem 0.8rem; 
    appearance: none; 
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e"); 
    background-position: left 0.5rem center; 
    background-repeat: no-repeat; 
    background-size: 1.5em 1.5em; 
}
select:invalid, select option[value=""] { 
    color: var(--text-secondary) !important; 
}
select option { 
    color: var(--text-primary); 
}

.form-group label { 
    position: absolute; 
    top: 0.9rem; 
    right: 0.8rem; 
    color: var(--text-secondary); 
    pointer-events: none; 
    transition: all 0.3s ease; 
    background-color: var(--input-bg); 
    padding: 0 0.3rem; 
    font-size: 1rem; 
}
.form-group.compact label { 
    background-color: var(--card-bg);
}

.form-group input:not(:placeholder-shown) + label, 
.form-group input:focus + label, 
.form-group textarea:not(:placeholder-shown) + label, 
.form-group textarea:focus + label, 
.form-group select:focus + label, 
.form-group select:valid + label, 
.form-group input.has-value-when-filled + label {
    top: -0.8rem;
    right: 0.8rem;
    font-size: 0.8rem;
    color: var(--primary-accent);
    font-weight: 600;
}

.form-group input:focus, 
.form-group select:focus, 
.form-group textarea:focus { 
    outline: none; 
    border-color: var(--input-border-focus); 
    box-shadow: 0 0 0 3px rgba(109, 40, 217, 0.2);
}

#installments-schedule-container { 
    margin-top: 2rem; 
}
.installment-card { 
    background-color: #f9fafb; 
    border: 1px solid #e5e7eb; 
    border-radius: 12px; 
    margin-bottom: 1.5rem; 
    overflow: hidden; 
}
.installment-card-header { 
    font-size: 1.1rem; 
    font-weight: 700; 
    color: var(--secondary-accent); 
    padding: 0.75rem 1.25rem; 
    background-color: rgba(0,0,0,0.03); 
    border-bottom: 1px solid #e5e7eb; 
    margin: 0; 
}
.installment-card-body { 
    display: grid; 
    grid-template-columns: repeat(auto-fit, minmax(130px, 1fr)); 
    gap: 1rem; 
    padding: 1.5rem 1.25rem; 
}
.form-group.compact { 
    margin-bottom: 0; 
}
.form-group.compact input, 
.form-group.compact select { 
    background-color: var(--card-bg); 
}

.form-actions { 
    margin-top: 2rem; 
    text-align: center; 
}
.submit-button { 
    width: 100%; 
    padding: 0.9rem; 
    font-size: 1.1rem; 
    font-weight: bold; 
    color: white; 
    background: linear-gradient(45deg, var(--primary-accent), var(--secondary-accent)); 
    border: none; 
    border-radius: 8px; 
    cursor: pointer; 
    position: relative; 
    overflow: hidden; 
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s ease, box-shadow 0.2s ease; 
}
.submit-button:hover { 
    transform: translateY(-2px); 
    box-shadow: 0 10px 15px -3px rgba(109, 40, 217, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}
.cancel-link { 
    display: block; 
    margin-top: 1rem; 
    color: var(--text-secondary); 
    text-decoration: none; 
    transition: color 0.3s; 
}
.cancel-link:hover { 
    color: var(--secondary-accent); 
}

</style>