---
import Layout from '../../layouts/Layout.astro';
import { db } from "../../lib/firebase/server.js";
import { getDocs, collection, query, orderBy } from "firebase/firestore";

let upcomingInstallments = [];
let error = null;

try {
    const q = query(collection(db, "installments"), orderBy("createdAt", "desc"));
    const querySnapshot = await getDocs(q);
    const allContracts = querySnapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));

    const today = new Date();
    today.setHours(0, 0, 0, 0);
    const nextSevenDays = new Date();
    nextSevenDays.setDate(today.getDate() + 7);
    nextSevenDays.setHours(23, 59, 59, 999);

    const alerts = [];
    allContracts.forEach(contract => {
        if (contract.installments && Array.isArray(contract.installments)) {
            contract.installments.forEach((inst, index) => {
                if (inst.dueDate && inst.status === 'pending') {
                    const dueDate = new Date(inst.dueDate);
                    if (dueDate >= today && dueDate <= nextSevenDays) {
                        alerts.push({
                            ...inst,
                            customerName: contract.customerName,
                            customerPhone: contract.customerPhone,
                            contractId: contract.id,
                            instIndex: index,
                            unitType: contract.type,
                            unitLocation: contract.location
                        });
                    }
                }
            });
        }
    });

    upcomingInstallments = alerts.sort((a, b) => new Date(a.dueDate) - new Date(b.dueDate));

} catch (e) {
    error = e.message;
    console.error("Error fetching or processing installments for dashboard: ", e);
}
---

<Layout title="لوحة التحكم - المدير العام" showNavigation={false}>
    <main class="dashboard-main">
        <div class="dashboard-container">
            <header class="dashboard-header">
                <h1>لوحة تحكم المدير العام</h1>
                <p>مرحباً بك، استعرض وأدِر الأقسام المختلفة من هنا.</p>
            </header>

            <section class="alerts-section">
                <div class="alerts-section-header">
                    <h2><i class="fa-solid fa-bell"></i> تنبيهات الأقساط القادمة</h2>
                    {!error && upcomingInstallments.length > 0 && (
                         <button id="toggle-alerts-btn" class="toggle-alerts-btn" type="button">
                            <span>لديك <b>{upcomingInstallments.length}</b> أقساط مستحقة</span>
                            <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
                        </button>
                    )}
                </div>

                {error && <p class="error-message">خطأ في تحميل التنبيهات: {error}</p>}

                {!error && upcomingInstallments.length === 0 && (
                    <p class="no-alerts">لا توجد أقساط مستحقة خلال الأيام السبعة القادمة.</p>
                )}

                {!error && upcomingInstallments.length > 0 && (
                    <div id="alerts-container" class="collapsible-content">
                        <div class="alerts-grid">
                            {upcomingInstallments.map(installment => (
                                <div class="alert-card">
                                    <div class="alert-header">
                                         <a href={`/admin/installments/list#${installment.contractId}`} class="customer-name-link">
                                            {installment.customerName}
                                        </a>
                                        <p class="unit-info">{installment.unitType} - {installment.unitLocation}</p>
                                        <p class="due-date"><i class="fa-solid fa-calendar-days"></i> {new Date(installment.dueDate).toLocaleDateString('ar-EG', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
                                    </div>
                                    <div class="alert-body">
                                        <span class="amount">المبلغ: {installment.amount.toLocaleString('ar-EG', { style: 'currency', currency: 'EGP' })}</span>
                                        <a href={`tel:${installment.customerPhone}`} class="phone-link">{installment.customerPhone}</a>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                )}
            </section>

            <section class="dashboard-actions">
                <a href="/admin/installments/list" class="action-card">
                    <div class="card-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-receipt-text"><path d="M4 2v20l2-1 2 1 2-1 2 1 2-1 2 1V2l-2 1-2-1-2 1-2-1-2 1-2-1Z"/><path d="M14 8H8"/><path d="M16 12H8"/><path d="M12 16H8"/></svg>
                    </div>
                    <h2>إدارة الأقساط</h2>
                    <p>عرض وتحديث وإضافة أقساط العملاء.</p>
                </a>

                <a href="#" class="logout-button">
                    تسجيل الخروج
                </a>
            </section>
        </div>
    </main>
</Layout>

<script is:inline>
    if (sessionStorage.getItem('isAdminLoggedIn') !== 'true') {
        window.location.href = '/admin';
    }

    const logoutButton = document.querySelector('.logout-button');
    if(logoutButton) {
        logoutButton.addEventListener('click', (e) => {
            e.preventDefault();
            sessionStorage.removeItem('isAdminLoggedIn');
            window.location.href = '/admin';
        });
    }

    const toggleBtn = document.getElementById('toggle-alerts-btn');
    const alertsContainer = document.getElementById('alerts-container');
    if (toggleBtn && alertsContainer) {
        alertsContainer.classList.remove('expanded');
        toggleBtn.classList.remove('active');

        toggleBtn.addEventListener('click', () => {
            const isExpanded = alertsContainer.classList.toggle('expanded');
            toggleBtn.classList.toggle('active', isExpanded);
        });
    }
</script>

<style>
