.toggle-alerts-btn:hover { background-color: var(--primary-accent-dark); box-shadow: 0 4px 12px rgba(109, 40, 217, 0.3); }
.toggle-alerts-btn span b { background-color: white; color: var(--primary-accent); border-radius: 50%; width: 24px; height: 24px; display: inline-flex; justify-content: center; align-items: center; margin-right: 0.5rem; }
.arrow-icon { transition: transform 0.3s ease; }
