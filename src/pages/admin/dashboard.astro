.unit-info { font-size: 0.9rem; color: var(--text-secondary); margin: 0; }
.due-date { font-size: 0.9rem; color: var(--text-secondary); font-weight: 500; margin: 0; display: flex; align-items: center; gap: 0.4rem; }
