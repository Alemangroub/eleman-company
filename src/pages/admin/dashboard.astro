.dashboard-header p { font-size: 1.1rem; color: var(--text-secondary); }
.alerts-section { background: var(--card-bg); padding: 2rem; border-radius: 12px; margin-bottom: 2.5rem; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); }
.alerts-section-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; }
.alerts-section h2 { font-size: 1.5rem; font-weight: 700; color: var(--text-primary); display: flex; align-items: center; gap: 0.75rem; margin: 0; }
.alerts-section h2 i { color: #f59e0b; }
