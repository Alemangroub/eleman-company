.action-card p { font-size: 1rem; color: var(--text-secondary); }
.logout-button { margin-top: 1rem; justify-self: center; padding: 0.7rem 2.5rem; background-color: #ef4444; color: white; border-radius: 8px; text-decoration: none; font-weight: bold; transition: background-color 0.3s ease; }
