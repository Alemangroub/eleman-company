    --page-bg: #f0f2f5;
    --card-bg: #ffffff;
    --primary-accent: #6d28d9; 
    --primary-accent-dark: #5b21b6;
    --secondary-accent: #0891b2;
    --text-primary: #111827;
    --text-secondary: #6b7280;
}
