---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="إدارة الأقساط - المدير العام" showNavigation={false}>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <main class="installments-main-simplified">
        <div class="container">
             <header class="header">
                <div class="header-title-flex">
                    <h1>إدارة الأقساط</h1>
                    <a href="/admin/dashboard" class="back-link">&larr; العودة إلى لوحة التحكم</a>
                </div>
            </header>
            <div class="content-body">
                <p>اختر الإجراء الذي تريد القيام به.</p>
                <div class="button-group">
                    <a href="/admin/installments/new" class="btn">
                        <i class="fa-solid fa-plus"></i> إضافة قسط جديد
                    </a>
                    <a href="/admin/installments/list" class="btn">
                        <i class="fa-solid fa-list-ul"></i> الأقساط الحالية
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>

<script is:inline>
    if (sessionStorage.getItem('isAdminLoggedIn') !== 'true') {
        window.location.href = '/admin';
    }
</script>

<style>
    @keyframes pulse-glow {
        0%, 100% {
            box-shadow: 0 0 25px rgba(109, 40, 217, 0.4), 0 0 35px rgba(8, 145, 178, 0.3);
        }
        50% {
            box-shadow: 0 0 40px rgba(109, 40, 217, 0.6), 0 0 50px rgba(8, 145, 178, 0.5);
        }
    }

    .installments-main-simplified {
        min-height: 100vh;
        background-color: #f0f2f5;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        font-family: 'Cairo', sans-serif;
        direction: rtl;
        text-align: center;
    }

    .container {
        width: 100%;
        max-width: 600px;
        background-color: #ffffff;
        padding: 2rem 3rem 3rem;
        border-radius: 16px;
        box-shadow: 0 10px 25px -5px rgba(0,0,0,0.1);
    }

    .header {
        border-bottom: 1px solid #e5e7eb;
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

    .header-title-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .header-title-flex h1 {
        font-size: 2rem;
        font-weight: 800;
        color: #111827;
        margin: 0;
    }

    .back-link {
        color: #6d28d9;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .content-body p {
        font-size: 1.1rem;
        color: #6b7280;
        line-height: 1.7;
        max-width: 450px;
        margin: 0 auto 2.5rem;
    }
    
    .button-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem; /* Space between buttons */
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.85rem; 
        width: 100%;
        max-width: 380px;
        padding: 1rem;
        border-radius: 12px;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.25rem;
        color: white;
        background: linear-gradient(45deg, #6d28d9, #0891b2);
        border: none;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        animation: pulse-glow 3s infinite ease-in-out;
    }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(120deg, transparent, rgba(255, 255, 255, 0.4), transparent);
        transition: left 0.6s ease;
    }

    .btn:hover {
        transform: translateY(-6px) scale(1.05);
        animation-play-state: paused;
        box-shadow: 0 18px 35px -8px rgba(109, 40, 217, 0.5);
    }

    .btn:hover::before {
        left: 100%;
    }

    .btn i {
      font-size: 1.2rem; 
      line-height: 0; 
    }

</style>
